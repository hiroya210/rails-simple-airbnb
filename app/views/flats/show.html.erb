<div class="show-container">
  <div id="flat-image" 
  style="background-image: url( <% if @image.include? ".jpg" %> 
  <%= @image  %>
  <% else %>
  <%= @lorem %>
  <% end %> )">
  <div class="flat-name">
    <div>
        <h2><%= @flat.name %></h2>
        <p><%= @flat.address %></p>
        <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-primary" %>
        <%= link_to "Delete", flat_path(@flat), method: :delete, data: { confirm: "Are your sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
  </div>
  <div class="flat-information">
    <div class="flat-description">
    <h3>About this Flat</h3>
        <p><%= @flat.description %></p>
    </div>
    <div class="flat-price">
        <p style="font-size: 28px;">ï¿¥<%= @flat.price_per_night %> <small style="font-size: 16px;">/ night</small></p>
        <div class="date-form">
        <div>
            <label for="checkin" style="display:block;">Check-in</label>
            <input type="date" name="checkin" value="2022-07-22">
        </div>
        <div>
            <label for="checkout" style="display:block;">Checkout</label>
            <input type="date" name="checkout" value="2022-07-22">
        </div>
        </div>
        <br>
        <p>Max Guest: <%= @flat.number_of_guest %></p>
        <div>
            <input type="submit" name="reserve" value="Reserve" class="btn btn-primary">
        </div>
    </div>
  </div>
</div>