<div class="edit-container">
<h3>Edit Flat info</h3>
    <%= simple_form_for (@flat) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guest %>
        <%= f.input :image %>
        <%= f.button :submit, "Update Flat", class: "btn btn-primary" %>
    <% end %>
</div>